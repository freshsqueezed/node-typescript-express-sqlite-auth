{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDirs": ["src", "__tests__"]
  },
  "include": ["src", "types"],
  "exclude": ["__tests__"]
}
